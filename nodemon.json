{
  "watch": [
    "src",
    ".env",
    "index.html"
  ],
  "ext": "ts,tsx,js,jsx,json,html,css",
  "ignore": [
    "node_modules/**",
    "dist/**",
    "build/**",
    "*.test.ts",
    "*.test.js",
    ".git"
  ],
  "delay": 500,
  "verbose": true,
  "execMap": {
    "ts": "tsx",
    "js": "node"
  },
  "env": {
    "NODE_ENV": "development"
  },
  "events": {
    "start": "echo 'ðŸš€ Server starting...'",
    "restart": "echo 'ðŸ”„ Server restarting due to file changes...'",
    "crash": "echo 'ðŸ’¥ Server crashed - waiting for changes...'"
  }
}